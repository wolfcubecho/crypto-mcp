{
    "name": "crypto-mcp",
    "version": "0.1.0",
    "description": "CoinMarketCap MCP server for Claude and other MCP clients",
    "type": "module",
    "main": "build/index.js",
    "bin": {
        "cmc-mcp": "./build/index.js"
    },
    "scripts": {
          "build": "tsc && chmod 755 build/index.js",
          "discover": "tsx examples/run-discover-top.ts 20 5 1h 250 market_cap desc",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "coinmarketcap",
        "mcp",
        "claude",
        "model-context-protocol",
        "crypto"
    ],
    "author": "Charles Ji",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/szcharlesji/coinmarketcap-mcp"
    },
    "files": [
        "build",
        "README.md",
        "LICENSE"
    ],
    "engines": {
        "node": ">=16.0.0"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "latest",
        "zod": "latest",
        "dotenv": "^16.3.1",
        "node-fetch": "^3.3.2"
    },
    "devDependencies": {
        "@types/node": "latest",
        "typescript": "latest",
        "tsx": "^4.6.2"
    }
}
